<Window x:Class="Prct5Prog.MatrixDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Matrix Editor" Height="400" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Matrix Editor" 
                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <GroupBox Grid.Row="1" Grid.Column="0" Header="Matrix Size" Margin="0,0,5,0">
            <StackPanel>
                <TextBlock Text="Rows:" Margin="5"/>
                <TextBox x:Name="RowsTextBox" Text="3" Margin="5" TextChanged="SizeTextBox_TextChanged"/>
                <TextBlock Text="Columns:" Margin="5"/>
                <TextBox x:Name="ColumnsTextBox" Text="3" Margin="5" TextChanged="SizeTextBox_TextChanged"/>
                <Button x:Name="ResizeButton" Content="Apply Size" Margin="5" Click="ResizeButton_Click"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="1" Grid.Column="1" Header="Matrix Data" Margin="5,0,0,0">
            <ScrollViewer>
                <ItemsControl x:Name="MatrixItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="{Binding Columns}"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding Value}" Margin="2"
                                      Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>

        <GroupBox Grid.Row="2" Grid.ColumnSpan="2" Header="Quick Input" Margin="0,5,0,5">
            <StackPanel>
                <TextBox x:Name="QuickInputTextBox" Height="60" TextWrapping="Wrap" 
                         AcceptsReturn="True" Margin="5" TextChanged="QuickInputTextBox_TextChanged"/>
                <TextBlock Text="Enter 1 for true, 0 for false, space or comma separated" 
                           FontStyle="Italic" Margin="5,0,5,5"/>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OkButton" Content="OK" Width="80" Height="25" Margin="5" Click="OkButton_Click" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="25" Margin="5" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>